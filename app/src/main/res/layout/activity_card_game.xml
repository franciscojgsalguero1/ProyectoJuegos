<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E88E5">

    <!-- Área central para la pila de cartas -->
    <ImageView
        android:id="@+id/centralDeck"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:src="@drawable/card_back"
        android:contentDescription="Deck of Cards" />

    <!-- Jugador 1 (Inferior) -->
    <LinearLayout
        android:id="@+id/player1Cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Carta visible para el jugador 1 -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/bastos1"
            android:contentDescription="Player 1 Card" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/espadas1"
            android:contentDescription="Carta Jugador 1" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/espadas1"
            android:contentDescription="Carta Jugador 1" />
    </LinearLayout>

    <!-- Jugador 2 (Izquierda) -->
    <LinearLayout
        android:id="@+id/player2Cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cartas del reverso -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/card_back"
            android:contentDescription="Carta Jugador 2" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/card_back"
            android:contentDescription="Carta Jugador 2" />
    </LinearLayout>

    <!-- Jugador 3 (Superior) -->
    <LinearLayout
        android:id="@+id/player3Cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Cartas del reverso -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/card_back"
            android:contentDescription="Carta Jugador 3" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/card_back"
            android:contentDescription="Carta Jugador 3" />
    </LinearLayout>

    <!-- Jugador 4 (Derecha) -->
    <LinearLayout
        android:id="@+id/player4Cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cartas del reverso -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/card_back"
            android:contentDescription="Carta Jugador 4" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/card_back"
            android:contentDescription="Carta Jugador 4" />
    </LinearLayout>
</RelativeLayout>
